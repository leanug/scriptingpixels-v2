---
import BaseLayout from '../layouts/BaseLayout.astro';
import Benefits from '../components/Benefits/index.astro';
import FramerTemplates from '../components/FramerTemplates/index.astro';
import BlogList from '../components/BlogList/index.astro';
import Pill from '../components/Pill.astro';
import SecurePayments from '../components/SecurePayments.astro';

// Constants
const title = "Scripting Pixels - Framer Templates and Resources";
const description = "Framer Templates for High-Impact Sites - Launch fast with premium templates built for speed, flexibility, and a modern web presence.";
---

<BaseLayout {title} {description}>
  <section class="flex items-center my-12 md:my-16 lg:mt-20 lg:mb-24 justify-center text-center">
    <div class="max-w-6xl space-y-3 lg:space-y-6">
      <div class="text-sm font-semibold tracking-wide inline-block px-4 py-2.5 bg-white rounded-full">
        <div class="relative inline-flex">
          <div class="rounded-full bg-green-400 h-[8px] w-[8px] inline-block mr-2"></div>
          <div class="absolute animate-ping rounded-full bg-green-400 h-[8px] w-[8px] mr-2"></div>
        </div>
        Template customization service available
      </div>
      <h1 class="heading-hero">
        Where Framer <img src="/website-icon.svg" alt="Logo" class="inline-block w-7 h-7 md:w-10 md:h-10 lg:w-12 lg:h-12 mx-0.5 align-middle -rotate-4 shadow-lg rounded lg:rounded-lg mb-2" /> 
        Templates deliver real-world results. 
      </h1>
      <p class="text-xl secondary-text font-medium text-balance mx-auto w-full max-w-4xl">
        Effortlessly customizable templates designed to deliver real impact, get your site live in days, not weeks, and start converting sooner.
      </p>

     <div class="flex justify-center items-center bg-gray-100">
      <div class="relative w-16 h-28 rounded-full bg-white shadow-md overflow-hidden flex items-start justify-center">
        <div class="absolute top-0 w-3 bg-pink-500 rounded-full animate-grow-origin-bottom origin-top"></div>
      </div>
</div>

<style>
@keyframes grow-origin-bottom {
  0% {
    height: 12px;
    transform-origin: top;
    border-radius: 9999px;
  }
  30% {
    height: 100%;
    border-radius: 0; /* stretch */
  }
  60% {
    height: 100%;
    border-radius: 0;
  }
  100% {
    height: 12px;
    transform-origin: bottom;
    transform: translateY(100%);
    border-radius: 9999px;
  }
}
.animate-grow-origin-bottom {
  animation: grow-origin-bottom 2s infinite ease-in-out;
}
</style>



    </div>
  </section>

  <section class="mb-20">
    <div class="flex flex-col items-center lg:flex-row lg:justify-between mb-6 gap-3" id="benefits">
      <h2 class="text-lg font-semibold w-full lg:w-1/2 self-end">
        Featured and New Framer Templates
      </h2>
      <SecurePayments />
    </div>
    <FramerTemplates />
    <div class="flex justify-center gap-3 mt-6 flex-wrap">
      <a 
        href="/framer" 
        class="all-btn-big outline mt-6"
      >
        Browse all templates
      </a>
    </div>
  </section>
  
  <section class="mb-20">
    <Pill imgSrc="/icons/framer-color-icon.svg" imgAlt="Framer icon">
      Framer Templates
    </Pill>
    <div class="flex flex-col lg:flex-row items-end justify-between mb-12 gap-6 lg:gap-12">
      <h2 class="text-4xl md:text-5xl font-semibold lg:w-1/2 self-end">
        Plug in your brand. Hit publish. Go live in days — not weeks.
      </h2>
      <p class="text-lg secondary-text lg:w-1/2 self-end">
        From mobile-ready design and SEO optimization to accessibility 
        and launch-ready templates, everything's crafted to help you go 
        live quickly, and look good doing it.      
      </p>
    </div>
    <Benefits />
  </section>

  <section class="mb-20">
    <Pill imgSrc="/icons/sword.svg" imgAlt="Skill icon">
      Sharpen your Skills
    </Pill>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      <!-- Left Side Content -->
      <div>
        <h2 class="text-4xl md:text-5xl font-semibold mb-6">
          Grow Smarter with<br />Proven Framer Tips
        </h2>
        <p class="text-lg secondary-text mb-8">
          Actionable design tips, real-world insights, and no fluff. 
          Learn what's working in Framer, 
          how to grow smarter, and build sites that don't just look good — they convert.
        </p>
        <a 
          href="/blog" 
          class="all-btn-big">
          Visit the Blog
        </a>
      </div>
      <BlogList />
    </div>
  </section>
</BaseLayout>

---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Prose from "../../components/Prose.astro";
import type { Blog } from "../../types";
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const blog = await getCollection("blog");
  return blog.map((post: Blog) => ({
    params: { id: post.data.slug },
    props: post
  }));
}

const { data } = Astro.props;
const { title, image, slug, date, author, avatar, description } = data;

const { Content } = await render(Astro.props)

export const prerender = true;
---

<BaseLayout title={title} description={description}>
  <div class="flex gap-12 w-full max-w-2xl mx-auto mb-20 mt-20">
    <article class="flex flex-col gap-6">
      <h1 class="text-4xl md:text-5xl font-semibold text-balance leading-tight">
        {title}
      </h1>
      <div class="flex flex-col gap-3">
        <p>
          Last updated: <span class="font-semibold">{new Date(date).toLocaleDateString()}</span>
        </p>
        <!-- Author -->
        <div class="flex items-center flex-wrap gap-3 mb-6">
          Written by
          <Image
            src={`/media/authors/${avatar}`}
            alt="Author profile picture" 
            class="w-8 h-8 rounded-md"
            width="44" 
            height="44"
            decoding="async"
            loading="lazy"
          />  
          <a href="https://www.x.com/leandroubilla_" class="underline font-semibold">{author}</a>
        </div>
      </div>
      <img
        transition:name={`img-${slug}`}
        src={`/media/blog/${slug}/${image}`} 
        alt={title} 
        class="w-full max-w-2xl aspect-4/3 object-cover rounded-xl"
      />
      <Prose>
        <Content />
      </Prose>
    </article>
  </div>
</BaseLayout>
---
import '@fontsource-variable/geist';
import { ClientRouter } from 'astro:transitions'
import '../styles/global.css'
import  SpeedInsights  from "@vercel/speed-insights/astro"

import Overlay from '../components/Overlay.astro'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
    <!-- SEO Tags -->
    <title>{Astro.props.title ?? 'Scripting Pixels - Framer Templates & Resources'}</title>
    <meta name="description" content={Astro.props.description ?? 'Premium Framer templates and design resources for high-impact websites.'} />

    <!-- Open Graph -->
    <meta property="og:title" content={Astro.props.title ?? 'Scripting Pixels - Framer Templates & Resources'} />
    <meta property="og:description" content={Astro.props.description ?? 'Premium Framer templates and design resources for high-impact websites.'} />
    <meta property="og:image" content="https://www.scriptingpixels.com/og-image.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.scriptingpixels.com" />

    <!-- Optional: Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={Astro.props.title ?? 'Scripting Pixels - Framer Templates & Resources'} />
    <meta name="twitter:description" content={Astro.props.description ?? 'Premium Framer templates and design resources for high-impact websites.'} />
    <meta name="twitter:image" content="https://www.scriptingpixels.com/og-image.jpg" />

    <ClientRouter />
    <SpeedInsights/> 
	</head>
	<body>
    <div class="relative leading-tightest">
      <div class="bg-[#f2f2f2] flex justify-center primary-text">
        <div class="flex flex-col w-full min-h-screen">
          <Header />
          <main class="flex-grow max-w-[1920px] mx-auto px-2.5 md:px-5 xl:px-20">
            <slot />
          </main>
          <Footer />
        </div>
      </div>
      <Overlay />
    </div>
    <script>
      import "../scripts/menu.js";
    </script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>